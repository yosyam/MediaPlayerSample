<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent">

    <ImageButton
            android:layout_width="40dp"
            android:layout_height="58dp"
            android:id="@+id/buttonRewind"
            android:src="@drawable/media_rewind_s"
            android:contentDescription="Rewind"/>

    <ImageButton
            android:layout_width="40dp"
            android:layout_height="58dp"
            android:id="@+id/buttonPlayPause"
            android:src="@drawable/media_play_s"
            android:contentDescription="Play"/>

    <ImageButton
            android:layout_width="40dp"
            android:layout_height="58dp"
            android:id="@+id/buttonSkip"
            android:src="@drawable/media_skip_s"
            android:contentDescription="Skip"/>

    <ImageButton
            android:layout_width="40dp"
            android:layout_height="58dp"
            android:id="@+id/buttonStop"
            android:src="@drawable/media_stop_s"
            android:contentDescription="Stop"/>

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New Text"
                android:id="@+id/textAlbum"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New Text"
                android:id="@+id/textArtist"/>

        <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="New Text"
                    android:id="@+id/textTitle"/>

            <Chronometer
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/chronometer"
                    android:gravity="right"/>
        </RelativeLayout>
    </LinearLayout>

</LinearLayout><!-- From: file:/C:/Users/yoshi/AndroidStudioProjects/MediaPlayerSampleProject/MediaPlayerSample/src/main/res/layout/remote_control.xml -->